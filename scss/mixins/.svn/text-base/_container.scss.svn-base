@mixin container($padded:none) {
    margin-left: auto;
    margin-right: auto;

    @if $media-queries {
        @if $padded == "none" {
            width: 100%;
        }
        @if $padded == "padded" {
            width: 90%;
        }
        @include rem(max-width, 64em);
    }
    @else {
        @include rem(width, 64em);
    }
}

@mixin pie {
    position: relative;
    behavior: url(../PIE.htc);
}

@mixin vertical-align {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

@mixin vertical-align-absolute {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
